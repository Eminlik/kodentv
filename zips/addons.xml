<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.kodentvwizard" name="Koden Tv Builds Wizard" version="5.2020" provider-name="ubden">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="tr">Koden Tv Builds Wizard</summary>
    <description lang="tr">Koden TV Yukleme Sihirbazi</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.program.supremebuildswizard" name="Supreme Builds Wizard" version="4.0.1" provider-name="KodiSkills">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Supreme Builds Wizard</summary>
    <description lang="en">The Supreme Builds Wizard contains all official Supreme Builds, Add-ons, Apps, Maintenance Tools, Settings and more.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.kodentv" name="Koden TV Builds Repository" version="1.0.3" provider-name="ubden">
	<extension point="xbmc.addon.repository" name="Koden Repository">
		<dir>
            <info compressed="false">https://raw.githubusercontent.com/ubden/kodentv/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/ubden/kodentv/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/ubden/kodentv/master/zips/</datadir>
        </dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Koden TV Builds Repository</summary>
		<description>Official Repository Of The Koden TV Builds Team</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
	</extension>
</addon>
</addons>
