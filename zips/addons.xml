<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.kodentvwizard" name="[COLOR blue]Koden TV[/COLOR] [COLOR white]Sihirbazı[/COLOR]" version="5.2020" provider-name="ubden">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.requests" version="2.9.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">[COLOR lime]Kodi Koden TV Builds[/COLOR] - [COLOR white] - by ubden!![/COLOR]</summary>
    <description lang="en">[B]Tum Zamanlarin En İyi Kodi Yapisi [/B] - Amazon Firestick / Fire TV / Fire Cube, Android, Nvidia Shield TV, Windows / Mac / Linux Computers, Xbox One, iPhone, iPad.[CR][COLOR blue] Telegram : [CR][COLOR aqua]@ubden[/COLOR]</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.kodentv" name="Koden TV Repository" version="1.0.3" provider-name="ubden">
	<extension point="xbmc.addon.repository" name="Example Repository">
		<dir>
            <info compressed="false">https://raw.githubusercontent.com/ubden/kodentv/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/ubden/kodentv/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/ubden/kodentv/master/zips/</datadir>
        </dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Koden TV Repository</summary>
		<description>Official Repository Of The Koden TV Team</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
	</extension>
</addon>
<addon id="plugin.video.kodentvfreshstart" name="Koden TV Fresh Start" version="4.0.1" provider-name="ubden">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Koden TV Fresh Start</summary>
    <description lang="en">Kodi Sifirlama Araci.</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
