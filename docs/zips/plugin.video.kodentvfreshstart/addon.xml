<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.kodentvfreshstart" name="Fresh Start" version="1.0.2" provider-name="ubden">
<extension point="xbmc.addon.repository" name="Example Repository">
		<dir>
            <info compressed="false">https://raw.githubusercontent.com/ubden/kodentv/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/ubden/kodentv/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/ubden/kodentv/master/zips/</datadir>
        </dir>
	</extension>
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Restore Kodi to Default Settings</summary>
    <description lang="en">Easily Restore Kodi back to its original default state, deleting all customizations and addons you may have previously enabled.</description>
    <platform>all</platform>
    <website>http://ubden.com/</website>
  </extension>
</addon>
